<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Background Color -->
            <solid android:color="@color/white" />

            <!-- Border Color -->
            <stroke android:width="@dimen/border_line_thickness" android:color="@color/white" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

        </shape>
    </item>


    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Background Color -->
            <solid android:color="@color/whitish_gray" />

            <!-- Border Color -->
            <stroke android:width="@dimen/border_line_thickness" android:color="@color/whitish_gray" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />

        </shape>
    </item>

</selector>